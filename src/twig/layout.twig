{% from 'macro.twig' import symbol %}

<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <title>HTML Academy: {{ title }}</title>
    <link rel="icon" href="favicon.ico">
    <link rel="icon" href="img/favicons/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="img/favicons/180.png">
    <link rel="manifest" href="site.webmanifest">
    <link href="css/normalize.css" rel="stylesheet">
    <link href="css/style.min.css" rel="stylesheet">
    {% if IS_DEV %}
      <link href="css/dev.min.css" rel="stylesheet">
    {% endif %}
  </head>
  <body class="page-body">
    <div hidden>
      {% include '../../build/img/sprite.svg' %}
    </div>

    {% include 'partials/header.twig' %}

    <main {{ page == 'index' ? 'class="main-primary"' }}>
      {% block pageMain %}
        <h1 class="search-header search-header-lead">Страница в разработке</h1>
      {% endblock %}
    </main>

    {% include 'partials/footer.twig' %}

    <script src="js/script.min.js"></script>

    {% if IS_DEV %}
      <script src="js/dev.min.js"></script>
    {% endif %}
  </body>
</html>
