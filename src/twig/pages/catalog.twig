{% extends '../layout.twig' %}

{% set title = 'Седона: Гостиницы' %}

{% block pageMain %}
  <h1 class="visually-hidden">Поиск остиницы Седоны</h1>
  <section>
    <h2 class="visually-hidden">Фильтр гостиниц</h2>
    <form class="filter-form" action="https://echo.htmlacademy.ru/" method="get">
      <fieldset class="filter-form-fields form-fields-infrastructure">
        <legend>Инфраструктура:</legend>
        <ul>
          <li class="chechbox">
            <label><input  type="checkbox" value="basin" checked="checked">Бассейн</label>
          </li>
          <li>
            <label><input type="checkbox" value="parking">Парковка</label>
          </li>
          <li>
            <label><input type="checkbox" value="wi-fi">Wi-Fi</label>
          </li>
        </ul>
      </fieldset>
      <fieldset class="filter-form-fields form-field-type">
        <legend>Тип жилья:</legend>
        <ul>
          <li>
            <label><input type="checkbox" value="hotel" checked="checked">Гостиница</label>
          </li>
          <li>
            <label><input type="checkbox" value="motel" checked="checked">Мотель</label>
          </li>
          <li>
            <label><input type="checkbox" value="fpartments" checked="checked">Апартаменты</label>
          </li>
        </ul>
      </fieldset>
      <fieldset class="filter-form-fields form-fields-cost">
        <legend>Стоимость в сутки (Р):</legend>
        <input type="text" placeholder="От 0">
        <input type="text" placeholder="До 3000">
        <input id="lower-price-slider" type="range" min="0" max="3000" value="0">
        <input id="higher-price-slidex" type="range" min="0" max="3000" value="3000">
        <input type="submit" value="Показать">
      </fieldset>
    </form>
  </section>
  <section>
    <h2 class="visually-hidden">Результаты поиска</h2>
    <header>
      <h3 class="visually-hidden">Сортировка</h3>
      <p>Найдено: 3</p>
      <ul>
        <li><a>По цене</a></li>
        <li><a href="#!">По рейтингу</a></li>
        <li><a href="#!">По типу</a></li>
      </ul>
      <ul>
        <li><a href="#!">Сортировка по возрастанию</a></li>
        <li><a href="#!">Сортировка по убыванию</a></li>
      </ul>
    </header>
    <ul>
      <li>
        <h4>Amara Resort &amp; Spa</h4>
        <img src="img/catalog-1.jpg" alt="Гостиница Amara Resort, вид снаружи" width="135" height="90">
        <p>Гостиница</p>
        <p>От 4000 Р.</p>
        <a href="#!">Подробнее</a>
        <a href="#!">Забронировать</a>
        <p>Рейтинг: 8,5</p>
      </li>
      <li>
        <h4>Desert Quail Inn</h4>
        <img src="img/catalog-2.jpg" alt="Гостиница Desert Quail Inn, вид снаружи" width="135" height="90">
        <p>Мотель</p>
        <p>От 3000 Р.</p>
        <a href="#!">Подробнее</a>
        <a href="#!">Забронировать</a >
        <p>Рейтинг: 8,9</p>
      </li>
      <li>
        <h4>Villas at Poco Diablo</h4>
        <img src="img/catalog-3.jpg" alt="Гостиница Villas at Poco Diablo, вид снаружи" width="135" height="90">
        <p>Апартаменты</p>
        <p>От 2000 Р.</p>
        <a href="#!">Подробнее</a>
        <a href="#!">Забронировать</a>
        <p>Рейтинг: 9,2</p>
      </li>
    </ul>
  </section>
{% endblock %}
